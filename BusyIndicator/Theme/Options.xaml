<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:fr="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    >

    <SolidColorBrush
        x:Key="IndicatorTextForeground"
        fr:Freeze="True"
        Color="#FFFFFF"
        />
    <SolidColorBrush
        x:Key="IndicatorForeground"
        fr:Freeze="True"
        Color="#4EA2FF"
        />
    <SolidColorBrush
        x:Key="IndicatorBackground"
        fr:Freeze="True"
        Color="#DDDDDD"
        />

    <sys:Double
        x:Key="IndicatorScaleX"
        fr:Freeze="True">1</sys:Double>

    <sys:Double
        x:Key="IndicatorScaleY"
        fr:Freeze="True">1</sys:Double>

</ResourceDictionary>